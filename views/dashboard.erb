<form action="/tasks" id="new_task" method="POST">
  <input type="text" name="description">
  <input type="submit" value="Add">
</form>

<ul id="tasks">
</ul>

<script type="text/html" id="task-template">
  <li id="task-{{id}}" class="task editable">
    <div class="view-mode">
      {{description}}
      <a href="#" class="state-changer">Edit</a>
    </div>
    <div class="edit-mode">
      <form action="/tasks/{{id}}" method="PUT">
        <input type="text" name="description" value="{{description}}">
        <input type="submit" value="Update"> or <a href="#" class="state-changer">Cancel</a>
      </form>
    </div>
  </li>
</script>